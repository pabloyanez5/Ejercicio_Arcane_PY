@model List<ArcaneApp_.Models.Personaje>

<h2>Registrar Personaje</h2>

<form asp-action="Crear" method="post">
    <input name="Nombre" placeholder="Nombre" class="form-control mb-2" />
    <input name="Rango" placeholder="Rango" class="form-control mb-2" />
    <input name="Habilidad" placeholder="Habilidad" class="form-control mb-2" />
    <button type="submit" class="btn btn-primary">Registrar</button>
</form>

<h3>Listado de Personajes</h3>
<table class="table">
    <thead>
        <tr><th>Nombre</th><th>Rango</th><th>Habilidad</th></tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Nombre</td>
                <td>@p.Rango</td>
                <td>@p.Habilidad</td>
            </tr>
        }
    </tbody>
</table>
